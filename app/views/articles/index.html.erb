<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>
  <% if logged_in? %>
    <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
  <% else %>
    <br>
    <p>Login to Create a New Article</p>
  <% end %>
</ul>