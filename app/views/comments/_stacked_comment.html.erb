<%= comment.author.username %> posted on <%= comment.created_at %>
  <br>
  > <%= comment.content  %> <%= link_to 'View', comment_url(comment) %>
<br>
<ul>
  <% post.all_comments_by_parent_id[comment.id].each do |child| %>
    <li>
      <%= render 'comments/stacked_comment', comment: child, post: post %>
    </li>
  <% end %>
</ul>
