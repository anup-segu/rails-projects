<h2><%= @post.title %></h2>

<p><%= @post.content %></p>
<h4>Comments</h4>

<ul>
  <% @post.comments.where(parent_comment_id: nil).each do |comment| %>
    <li>
      <%= render 'comments/stacked_comment', comment: comment %>
    </li>
    <br>
  <% end %>
</ul>

<%= render 'comments/form', post: @post %>
<br>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Sub', sub_url(@post.post_subs.first.sub) %>
