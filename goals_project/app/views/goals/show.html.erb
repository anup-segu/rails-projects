<h2><%= @goal.title %></h2>
<p>Goal: <%= @goal.description %></p>
<p>
  Your progress: <%= @goal.progress %>
</p>
<%= render 'comments/comment_list', parent: @goal %>


<%= button_to 'Edit Goal', edit_goal_url(@goal), method: :get %>
<%= button_to 'Delete Goal', goal_url(@goal), method: :delete %>
<br />
<%= render 'comments/comment_form', parent: @goal, comment: @comment %>
<%= link_to 'All Goals', goals_url %>
